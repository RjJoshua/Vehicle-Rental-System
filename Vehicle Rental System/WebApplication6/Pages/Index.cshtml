@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Vehicle Rental System</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Rental Price</th>
                <th>Is Available</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Vehicles.Count; i++)
            {
                <tr>
                    <td>@Model.Vehicles[i].Make</td>
                    <td>@Model.Vehicles[i].Model</td>
                    <td>@Model.Vehicles[i].RentalPrice</td>
                    <td>@Model.Vehicles[i].IsAvailable</td>
                    <td>
                        @if (Model.Vehicles[i].IsAvailable)
                        {
                            <form asp-page-handler="Rent" asp-route-id="@i" method="post">
                                <button type="submit" class="btn btn-primary">Rent</button>
                            </form>
                        }
                        else
                        {
                            <form asp-page-handler="Return" asp-route-id="@i" method="post">
                                <button type="submit" class="btn btn-primary">Return</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>